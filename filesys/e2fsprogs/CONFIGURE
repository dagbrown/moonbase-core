if ! grep -q CONFIGURED $MODULE_CONFIG; then

  if query "Enable compression support? [experimental] " n; then
    OPTS=$OPTS" --enable-compression"
  fi &&

  if query "Enable directory hashing? [experimental] " n; then
    OPTS=$OPTS" --enable-htree --enable-htree-clear"
  fi &&

  echo 'CONFIGURED="y"' >> $MODULE_CONFIG &&
  echo 'OPTS='\"$OPTS\" >> $MODULE_CONFIG
fi
